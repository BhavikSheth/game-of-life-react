{
  "name": "my-react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for creating apps with React and Redux",
  "main": "src/index.js",
  "scripts": {
    "start": "concurrently \"yarn test:watch\" \"yarn dev\"",
    "dev": "webpack-dev-server --progress --quiet",
    "build": "webpack",
    "watch": "webpack --watch",
    "test": "NODE_ENV=test mocha --require babel-register src/**/*.spec.js",
    "test:watch": "yarn test --watch",
    "lint": "esw webpack.config.js src tools tests",
    "lint:watch": "yarn lint --watch"
  },
  "keywords": [
    "react",
    "redux",
    "hot reload",
    "webpack",
    "mocha",
    "eslint",
    "boilerplate"
  ],
  "license": "MIT",
  "author": "Bhavik Sheth <bhavik@bhaviksheth.io> (http://www.bhaviksheth.io/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/BhavikSheth/my-react-boilerplate"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "eslint-watch": "^3.1.3",
    "html-webpack-plugin": "^2.30.1",
    "mocha": "^5.0.0",
    "node-sass": "^4.7.2",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ],
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ],
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "quotes": [
        2,
        "double",
        {
          "allowTemplateLiterals": true
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  }
}
